{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2017", "dom", "esnext"]
  },
  "include": ["*.json", "src/*.ts"],
  "exclude": ["node_modules"]
}
